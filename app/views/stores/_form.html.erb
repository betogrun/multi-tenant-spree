<%= form_with(model: store, local: true) do |form| %>
  <% if store.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(store.errors.count, "error") %> prohibited this store from being saved:</h2>

      <ul>
      <% store.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :subdomain %>
    <%= form.text_field :subdomain, id: :store_subdomain %>
  </div>
  <div id='subdomain-message' style="display:none;">
    <p class='error'>Already exists</p>
  </div>


  <div class="field">
    <%= form.label 'Admin email' %>
    <%= text_field_tag :admin_login %>
  </div>

  <div class="field">
    <%= form.label 'Admin password' %>
    <%= password_field_tag :admin_password %>
  </div>

  

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
